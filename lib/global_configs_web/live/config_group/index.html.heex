<h1>Config Groups</h1>

<form phx-change="filter-group">
  <label>
    env:
    <select name="env">
      <option>*</option>
      <option>prod</option>
      <option>staging</option>
      <option>dev</option>
    </select>
  </label>
</form>

<ul>
<%= for g <- @groups do %>
  <li>
    <%= live_patch "#{g.name} [#{g.env }]" , to: Routes.config_group_show_path(@socket, :show, g) %>
  </li>
<% end %>
</ul>
