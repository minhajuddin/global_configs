<h2>
  <%= @group.name %>
  [<%= @group.env %>]
</h2>

<%= live_redirect "All Groups", to: Routes.config_group_index_path(@socket, :index) %>

<%= if @show_form do %>
<form phx-submit="save" accept-charset="utf-8">
  <input type="text" name="name" />
  <textarea name="value"></textarea>
  <input type="submit" value="Add" />
</form>
<% end %>

<form phx-change="filter-config" accept-charset="utf-8">
  <input type="text" name="q" placeholder="Search config" />
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <%= for c <- @configs do %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
